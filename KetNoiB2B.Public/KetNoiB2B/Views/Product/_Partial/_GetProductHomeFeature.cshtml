
@using KetNoiB2B.Utils
@using SETA.Entity
@model List<Product>
@{
    Layout = null;
    var productFeatured = (Product)(ViewBag.ProductFeatured ?? new Product());
}

@if (Model != null && Model.Count > 0)
{
    <section class="bar background-white no-mb">
        <div class="container" data-animate="fadeInUp">
            <div class="row">
                <div class="col-md-12">

                    <div class="heading text-center">
                        <h2>Sản phẩm nổi bật</h2>
                    </div>

                    <div class="row">
                        <div class="portfolio-showcase clearfix">
                            <div class="col-sm-6">
                                <div class="image">
                                    <img src="@WebUtils.GetImagePath(productFeatured.FirstImage)" alt="@productFeatured.ProductName" class="img-responsive home-img-featured">
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <h3><a href="portfolio-detail.html">@productFeatured.ProductName</a></h3>
                                <p class="lead">@productFeatured.CategoryName</p>
                                @Html.Raw(productFeatured.Description)
                                <p class="buttons">
                                    <a href="/Product/Detail/@productFeatured.ProductID" class="btn btn-template-main">Xem chi tiết</a>                                    
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="heading text-center">
                        <h3>Sản phẩm mới nhất</h3>
                    </div>

                    <div class="row portfolio no-space">
                        @foreach (var product in Model)
                        {
                            <div class="col-sm-4">
                                <div class="box-image">
                                    <div class="image">
                                        <img src="@WebUtils.GetImagePath(product.FirstImage)" alt="@product.ProductName" class="img-responsive home-img-list-newest">
                                    </div>
                                    <div class="bg"></div>
                                    <div class="name">
                                        <h3>
                                            <a href="/Product/Detail/@product.ProductID">@product.ProductName</a>
                                        </h3>
                                    </div>
                                    <div class="text">
                                        <p class="hidden-sm">@product.CategoryName</p>
                                        <p class="buttons">
                                            <a href="/Product/Detail/@product.ProductID" class="btn btn-template-transparent-primary">Xem chi tiết</a>                                            
                                        </p>
                                    </div>
                                </div>
                                <!-- /.box-image -->

                            </div>
                        }                        
                    </div>

                    @*<div class="see-more">
                        <a href="portfolio-4.html" class="btn btn-template-main">See more of our work</a>
                    </div>*@

                </div>

            </div>
        </div>
    </section>
}
