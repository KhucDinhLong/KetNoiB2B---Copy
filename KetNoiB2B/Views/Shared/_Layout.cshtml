                                                <i class="fa fa-angle-right"></i>
                                            </a>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                @RenderBody()
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    Kết nối B2B
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>

    <!-- Bootstrap -->
    <script src="~/Scripts/bootstrap.min.js" language="javascript" type="text/javascript"></script>
    <!-- FastClick -->
    <script src="~/Scripts/plugins/fastclick/fastclick.js" language="javascript" type="text/javascript"></script>
    <!-- NProgress -->
