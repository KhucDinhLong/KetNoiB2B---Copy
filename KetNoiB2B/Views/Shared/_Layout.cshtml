@using SETA.Core.Web
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    @if (@ViewBag.PageTitle == null)
    {
        <title>@Html.Raw(ViewBag.Title)</title>
    }
    else
    {
        <title>Kết nối B2B - @Html.Raw(ViewBag.PageTitle)</title>
    }

    <!-- Bootstrap -->
    <link href="/Content/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="/Content/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="/Content/nprogress.css" rel="stylesheet">
    <!-- iCheck -->
    <link href="~/Scripts/plugins/iCheck/skins/flat/green.css" rel="stylesheet">
    <!--Alertify-->
    <link rel="stylesheet" href="/Scripts/plugins/alertifyjs/css/alertify.min.css"/>
    <!--Dropzone -->
    <link rel="stylesheet" href="/Scripts/plugins/dropzone/dist/dropzone.css" />

    @RenderSection("css", required: false)

    <!-- Custom Theme Style -->
    <link href="/Content/custom.min.css" rel="stylesheet">
    <link href="/Content/Site.css" rel="stylesheet" />

    <!-- jQuery -->
    @Scripts.Render("~/bundles/jquery")
